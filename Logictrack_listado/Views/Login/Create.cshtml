@model Logictrack_listado.Models.Login

@{ ViewBag.Title = "Create"; }

<div class="row justify-content-center vh-100  align-items-center" id="contenedor">
    <div class="border col-5" style="background-color: #212529 !important
">


        @using (Html.BeginForm())
        {
                @Html.AntiForgeryToken()

                <form >
                    <hr style="color:aliceblue"/>
                    <h4 style="color:aliceblue" >Iniciar Sesión</h4>
                    <hr style="color:aliceblue"/>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group" style="margin-bottom:15px">
                        <label for="exampleInputEmail1">Usuario</label>
                        @Html.EditorFor(model => model.user, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter email" } })
                        @Html.ValidationMessageFor(model => model.user, "", new { @class = "text-danger" })
                        <small id="emailHelp" class="form-text text-muted">Nosotros nunca compartiremos tu usuario con alguien mas.</small>
                    </div>

                    <div class="form-group" style="margin-bottom:15px">
                        <label for="exampleInputEmail1">Contraseña</label>
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>


                    <button type="submit" class="btn btn-primary" style="margin-bottom:15px">Login</button>

                    <div class="form-group">

                        @if (!string.IsNullOrEmpty(ViewBag.Message))
                        {<div class="alert alert-danger" role="alert" style="margin-top:50px"> @ViewBag.Message </div>}
                    </div>

                </form>
         }

    </div>
</div>






<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/notify.js"></script>
